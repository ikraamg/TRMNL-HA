{
  "name": "ha-puppet",
  "version": "2.3.0",
  "description": "Home Assistant screenshot automation with advanced dithering for e-ink displays",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:visual": "NODE_OPTIONS=--experimental-vm-modules jest tests/visual",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "visual-diff": "node tests/visual/generate-diffs.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "gm": "^1.25.0",
    "home-assistant-js-websocket": "^9.4.0",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.26.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "tests/helpers/**/*.js",
      "!tests/**/*.test.js",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 70,
        "functions": 85,
        "branches": 70
      },
      "lib/dithering.js": {
        "lines": 90,
        "functions": 100,
        "branches": 90
      }
    }
  }
}
